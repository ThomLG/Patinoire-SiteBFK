{% extends 'base.html.twig' %}

{% block title %}Site officiel du Breizh Fobal Klub{% endblock %}

{% block body %}
<div class="homepageContent">

    <div class="nextMatch">Futur match date</div>

    <section class="lastMatch">
        {% for matcharticle in matcharticles %}
            <div class="lastMatchImage">
                <img src="{{ asset('uploads/photo_matches/' ~ matcharticle.mathPhoto) }}" alt="{{ matcharticle.articleTitle }}">
            </div>
            <div class="lastMatchResult">
                <a href="{{ path('match_articles') }}">{{ matcharticle.articleTitle }}</a>
            </div>
        {% endfor %}
    </section>

    <section class="lastNews">
        Derni√®res infos
        {% for novelty in novelties %}
            <ul>
                <li>{{novelty.noveltyTitle}}</li>
            </ul>
        {% endfor %}
    </section>

    <section class="calendrar">
        Calendrier
    </section>


<section class="partnerContainer">
    {% for partner in partners %}
    <li><img src="{{ asset('uploads/partners/' ~ partner.partnerLogo2) }}" alt="{{ partner.partnerName }}"></li>
    {%  endfor %}
</section>
</div>
{% endblock %}
