{% extends 'base.html.twig' %}

{% block title %}Site officiel du Breizh Fobal Klub{% endblock %}

{% block content %}

    <div class="main">

        <div class="content">
            <div class="container">
                <div class="nextMatch">Futur match date</div>
                <section>
                    {% for matcharticle in matcharticles %}
                        <div>
                            <img src="{{ asset('uploads/photo_matches/' ~ matcharticle.mathPhoto) }}"
                                 alt="{{ matcharticle.articleTitle }}">
                        </div>
                        <div>
                            <a href="{{ path('match_articles') }}">{{ matcharticle.articleTitle }}</a>
                        </div>
                    {% endfor %}
                </section>
            </div>
            <div class="sidebar">
                <div class="container">
                    <section>
                        Derni√®res infos
                        {% for novelty in novelties %}
                            <ul>
                                <li>{{ novelty.noveltyTitle }}</li>
                            </ul>
                        {% endfor %}
                    </section>

                    <section>
                        Calendrier
                    </section>
                </div>
            </div>
        </div>
    </div>


    <div class="partnerContent">
        {% for partner in partners %}
            <li><img src="{{ asset('uploads/partners/' ~ partner.partnerLogo2) }}" alt="{{ partner.partnerName }}"></li>
        {% endfor %}
    </div>

{% endblock %}
