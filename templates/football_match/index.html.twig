{% extends 'base.html.twig' %}

{% block title %}Résultats | Site Officiel du Breizh Fobal Klub{% endblock %}

{% block content %}
    <div class="main">
        <h1>Résultats</h1>
        <div class="content">
            <div class="tableMatch table-responsive">
                <table class="table">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Lieu</th>
                        <th scope="col">Equipe BFK</th>
                        <th scope="col">Adversaire</th>
                        <th scope="col">Résultat</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for result in results %}
                        <tr>
                            <td>{{ result.footballMatchDate|date("d/m/Y") }}</td>
                            <td> {{ result.footballMatchLocation }}</td>
                            <td>{{ result.bfkTeam }}</td>
                            <td>{{ result.bfkTeamOpponent }}</td>
                            <td>{{ result.result }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
