{% extends 'base.html.twig' %}

{% block title %}Partenaires | Site Officiel du Breizh Fobal Klub{% endblock %}

{% block content %}
<div class="main">
    <h1>Nos Partenaires</h1>
    {% for partner in partners %}
        <ul>
            <li>
                <img src="{{ asset('uploads/partners/' ~ partner.partnerLogo) }}" alt="{{ partner.partnerName }}">
                {{ partner.partnerName }}
                {{ partner.partnerDescription }}
            </li>
        </ul>
    {%  endfor %}
</div>
{% endblock %}

